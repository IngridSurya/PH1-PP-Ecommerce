<%- include('_header') %>

<form action="/login" method="post">
    <div class="container" style="padding: 200px;">
        <div style="text-align: center;">
            <h2>
                LOGIN
            </h2>
        </div>
        <% if (error) { %>
            <p class="text-danger"><%= error %></p>
        <%} %>
            <div class="mb-3">
                <label for="inputUsername">Username:</label>
                <input name="username" type="text" class="form-control" id="inputName" aria-describedby="inputUsername" placeholder="Your Username">
            </div>
            <div class="mb-3">
                <label for="InputPassword1" class="form-label">Password:</label>
                <input name="password" type="password" class="form-control" id="InputPassword1" placeholder="Your Password">
            </div>
            <div class="container" style="text-align: center;">
                <button type="submit" class="btn btn-primary">Login</button>
                <a href="/register">Register Now!</a>
            </div>
            
    </div>
</form>



<%- include('_footer') %>